{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "nodenext",
    "target": "es2016",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceRoot": "./src/",
    "rootDir": "./src/",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}